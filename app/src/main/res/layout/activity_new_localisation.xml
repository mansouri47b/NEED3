<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ss"
        android:layout_alignParentBottom="true"
        android:paddingLeft="-8dp"
        android:layout_marginBottom="-20dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ivLogo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="-5dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/addNuméroL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:hint="Ajouté Numéro"
                android:inputType="text" />


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="93dp"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/addAdresse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:hint="Ajouté Adresse"
                android:inputType="text" />


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="163dp"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/addTéléphone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:hint="Ajouté Téléphone"
                android:inputType="text" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/emailLay"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="233dp"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/addLongétude"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:hint="Ajouté Longitude"
                android:inputType="text" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/PassLay"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/emailLay"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/addAttitude"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:hint="Ajouté Latitude"
                android:inputType="text" />

        </LinearLayout>


        <Button
            android:id="@+id/ADD_L"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PassLay"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:text="AJOUTÉ"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/custom_corner"
            android:textColor="@android:color/white"
            android:backgroundTint="#934cf4"
            />
        <Button
            android:id="@+id/BACKAL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PassLay"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="130dp"
            android:text="RETOUR"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/custom_corner"
            android:textColor="@android:color/white"
            android:backgroundTint="#934cf4"
            />

    </RelativeLayout>


</RelativeLayout>
