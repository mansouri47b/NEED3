<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity"
    android:background="#934cf4">

    <fragment

        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"

        />
    <Button
        android:id="@+id/logout"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/logout"
        android:layout_marginTop="9dp"

        />

    <EditText
        android:id="@+id/location_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="   Rechercher..."
        android:layout_marginTop="6dp"
        android:background="@drawable/custom_corner"
        android:backgroundTint="@android:color/white"/>


<ImageButton

    android:id="@+id/recherche_entreprise"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="14dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:onClick="onClick"
    android:background="@drawable/search"
    />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        >
        <ImageButton

            android:id="@+id/hospitals_near"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:onClick="onClick"
            android:background="@drawable/hostpital"

             />
        <ImageButton
            android:id="@+id/school_near"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:onClick="onClick"
            android:background="@drawable/school"


            />
        <ImageButton
            android:id="@+id/restaurant_near"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:onClick="onClick"
            android:background="@drawable/food"


            />


    </LinearLayout>


</RelativeLayout>